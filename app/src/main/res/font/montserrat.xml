<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- configuração para a fonte regular (normal, sem negrito ou italico) -->
    <font
        android:font="@font/montserrat_medium"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/montserrat_medium"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- configuração para fonte com estilo itálico -->
    <font
        android:font="@font/montserrat_medium_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/montserrat_medium_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- configuracao para fonte em negrito -->
    <font
        android:font="@font/montserrat_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/montserrat_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
</font-family>