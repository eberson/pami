<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <TextView
        android:id="@+id/primeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_1" />

    <TextView
        android:id="@+id/segundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/primeiro"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:text="@string/text_2" />

    <TextView
        android:id="@+id/terceiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/segundo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/segundo"
        android:text="@string/text_1" />

    <TextView
        android:id="@+id/quarto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/terceiro"
        android:layout_alignLeft="@id/terceiro"
        android:text="@string/text_2" />

    <TextView
        android:id="@+id/quinto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quarto"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/text_1" />

</RelativeLayout>